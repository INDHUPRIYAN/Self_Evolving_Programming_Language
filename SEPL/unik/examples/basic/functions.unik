# Default parameters
func greet(name="User") {
    give "Hello, ", name
}
greet()
greet("Indhu")

# Single-line function
func square(n) -> n * n
give square(5)  # 25

# Variable arguments
func sumAll(*nums) {
    total = 0
    loop i in 0..len(nums) { total = total + nums[i] }
    ret total
}
give sumAll(1, 2, 3, 4)  # 10
